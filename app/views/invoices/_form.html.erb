<%= form_for(invoice) do |f| %>
  <% if invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.date_field :due_date %> <br/>
    <%= f.label :invoice_no %>
    <%= f.text_field :invoice_no %> <br/>
    <%= f.label :reference_no %>
    <%= f.text_field :reference_no %> <br/>
    <%= f.label :invoice_terms %>
    <%= f.text_area :invoice_terms %> <br/>
    <%= f.label :invoice_to %>
    <%= f.fields_for :invoice_to do |company_fields| %>
      <%= company_fields.label :name %><br />
      <%= company_fields.text_field :name %>
  <% end %>

    <br>
    <table>
      <tr>
        <th> Description </th>
        <th> Unit </th>
        <th> Price </th>
        <th> Amount </th>

      </tr>
      <%= f.fields_for :invoice_items do |invoice_item_fields| %>
      <tr>
        <td>
          <%= invoice_item_fields.text_field :description %>
        </td>
        <td>
          <%= invoice_item_fields.text_field :unit %>
        </td>
        <td>
          <%= invoice_item_fields.text_field :price %>
        <td>
        </td>
          <td>
          <%= invoice_item_fields.check_box :_destroy %>
          <%= invoice_item_fields.label :_destroy, 'remove' %>
        </td>
        </tr>
      <% end %>
    </table>

    <%= f.label :tax %>
    <%= f.number_field :tax %> <br/>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
